<div class='contents'>
  <div class='middle_content'>
    <h3>編集してみよう</h3>
    <%= form_for(@article) do |f|%>

      <p>タイトル</p>
       <%= f.text_field :title, class: 'title_input', placeholder: @article.title, size: 35 %>

      <p>画像</p>
      <%= f.text_field :image_url, class: 'image_url_input', placeholder: "画像URLを貼ってください", size: 35 %>

      <p>ご職業</p>
      <%= f.text_field :job, class: 'job_input', placeholder: @article.job, size: 35 %>

      
      <p>本文</p>
      <%= f.text_area :content, placeholder: @article.content, size: "70x14", class: "content_input" %>
      <%= f.submit "送信する", class: 'submit_button' %>

      <% end %>
  </div>